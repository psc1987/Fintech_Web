function loginUser()
{	
	var request = {};
	request.action = "loginUser";	
	request.m_email = $("#m_email").val();
	request.m_password = $("#m_password").val();
	
	var response = postJson(request);

	if(response.isSuccess)		
	{	
		toast(response.isSuccess);
		goRecentlyBoard();
	}
	else
	{
		toast(response.errorMsg);
	}
	return;
};    

